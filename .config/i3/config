# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

mode "focused" {

    # hardcoded focus keybindings
    bindsym b [class="(?i)chromium"] focus;    mode "default"
    bindsym m [class="(?i)thunderbird"] focus; mode "default"

    # keybindings for marking and jumping to clients
    bindsym a exec i3-input -F 'mark %s' -P 'Mark name: '
    bindsym g exec i3-input -F '[con_mark=%s] focus' -P 'Go to mark: '

    # Assign marks to keys 1-5
    bindsym 1 mark --add mark1
    bindsym 2 mark --add mark2
    bindsym 3 mark --add mark3

    bindsym q mark --replace mark1
    bindsym w mark --replace mark2
    bindsym e mark --replace mark3

    bindsym 4 unmark mark1
    bindsym 5 unmark mark2
    bindsym 6 unmark mark3
    bindsym 7 unmark

    # Jump to clients marked 1-5
    bindsym Shift+1 [con_mark="mark1"] focus
    bindsym Shift+2 [con_mark="mark2"] focus
    bindsym Shift+3 [con_mark="mark3"] focus
    bindsym Shift+4 [con_mark="mark4"] focus
    bindsym Shift+5 [con_mark="mark5"] focus

    # Exit to the default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+n mode "focused"

mode "run" {
    bindsym s mode "default"; exec --no-startup-id teiler
    bindsym v mode "default"; exec --no-startup-id urxvt -name nvim -e /usr/bin/nvim
    bindsym t mode "default"; exec --no-startup-id urxvt
    bindsym b mode "default"; exec --no-startup-id chromium
    bindsym l mode "default"; exec --no-startup-id cinnamon-screensaver-command -l
    bindsym o mode "default"; exec --no-startup-id cinnamon-session-quit --logout
    bindsym p mode "default"; exec --no-startup-id cinnamon-session-quit --power-off

    # Exit to the default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+q mode "run"


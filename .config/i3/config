bindsym $mod+$move_key+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+$move_key+Left move left
bindsym $mod+$move_key+Down move down
bindsym $mod+$move_key+Up move up
bindsym $mod+$move_key+Right move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v


[bar/wenir]
inherit = bar/example
bottom = true
monitor = VGA1

modules-left = i3
modules-center = 
modules-right = pkg filesystem volume memory cpu eth date

offset-x = 0
offset-y = 0
radius = 0

border-size = 3
border-top-size = 3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

font-0 = fixed:pixelsize=9;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=9;1

tray-maxsize = 18
tray-scale = 1.0
tray-padding = 0

[module/pkg]
type = custom/script
interval = 60
format = <label>
format-underline = #dc322f
label = "%output:0:30%"
exec = .config/polybar/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/weather]
type = custom/script
interval = 100
format = <label>
exec = ~/.config/polybar/weather

[colors]
